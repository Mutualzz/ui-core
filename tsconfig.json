{
    "compilerOptions": {
        "target": "es2024",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": false,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "verbatimModuleSyntax": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strict": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "paths": {
            "@utils": ["utils/index"],
            "@hooks/*": ["hooks/*"],
            "@utils/*": ["utils/*"],
            "@styled": ["utils/styled"],
            "@ui-types": ["types/index.ts"],
            "@ui-types/*": ["types/*"]
        }
    },
    "include": ["src/**/*"]
}
